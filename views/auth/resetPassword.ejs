<!doctype html>
<html lang="en">

<head>
    <%- include('../templates/head') %>

    <link rel="stylesheet" href="/css/password.css">

    <title>Super Nigerians</title>
</head>

<body>
    <%- include('../templates/sidebar') %>

    <div class="row" style="margin: 0;">
        <div class="col-md-6 col-lg-4 mx-auto p-4">
            <h3 class="my-4 text-center prj green-text">Reset Password</h3>
            <form class="p-5">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control prj-form-control py-4" id="password"
                        placeholder="Password" autocomplete="new-password"
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W]).{8,}" minlength="8" required="">

                </div>
                <div class="form-group">
                    <label for="password">Confirm Password</label>
                    <input type="password" name="password" class="form-control prj-form-control py-4" id="password"
                        placeholder="Password" autocomplete="new-password"
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W]).{8,}" minlength="8" required="">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg my-3">Submit</button>
                </div>
                <p class="text-center">Don't have an account? <a href="#">Sign Up</a></p>
            </form>
        </div>
    </div>

</body>

</html>